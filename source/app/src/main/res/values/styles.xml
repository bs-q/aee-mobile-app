<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
<!--        <item name="fontFamily">@font/application_font</item>-->
        <item name="fontFamily">@font/opensans</item>
        <item name="android:fontFamily">@font/opensans</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/background</item>
        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/background</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/gray_text</item>
    </style>

    <style name="CustomLoadingDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="fontFamily">@font/application_font</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:fontFamily">@font/application_font</item>
    </style>

    <style name="registerForm" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_20sdp</item>
    </style>

    <style name="news_shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12%</item>
    </style>

</resources>