<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="mainActivity"
            type="com.hq.remview.ui.main.MainActivity" />
        <variable
            name="mainViewModel"
            type="com.hq.remview.ui.main.MainViewModel" />
        <import type="android.view.View"/>
    </data>

   <FrameLayout
       android:background="#F9FCFF"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/with_restaurant"
            android:background="#F9FCFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:id="@+id/main_app_bar"
                        android:layout_alignParentTop="true"
                        app:titleTextColor="@color/white"
                        android:background="@color/primary_color">
                        <ImageView
                            android:paddingVertical="@dimen/_7sdp"
                            android:paddingHorizontal="@dimen/_7sdp"
                            android:layout_centerVertical="true"
                            android:id="@+id/main_app_bar_back"
                            android:layout_width="wrap_content"
                            android:visibility="invisible"
                            android:layout_alignParentStart="true"
                            android:onClick="@{(v)->mainActivity.onClick(v)}"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_back"
                            />

                        <TextView
                            android:id="@+id/toolbar_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/main_app_bar_back"
                            android:layout_toStartOf="@+id/main_app_bar_qr"
                            android:text="@string/restaurant_list"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_17sdp"
                            android:paddingBottom="@dimen/_3sdp"
                            android:textStyle="bold" />
                        <ImageView
                            android:padding="@dimen/_7sdp"
                            android:id="@+id/main_app_bar_qr"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{(v)->mainActivity.onClick(v)}"
                            android:src="@drawable/ic_qr"
                            android:layout_centerVertical="true"/>
                        <ImageView
                            android:visibility="gone"
                            android:padding="@dimen/_7sdp"
                            android:id="@+id/main_app_bar_calendar"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{(v)->mainActivity.onClick(v)}"
                            android:src="@drawable/ic_calendar"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
            <RelativeLayout
                android:id="@+id/restaurant_not_select"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_below="@+id/main_app_bar"
                android:layout_alignParentBottom="true"
                android:layout_height="match_parent">
                <TextView
                    android:background="#F9FCFF"
                    android:id="@+id/main_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:textColor="@color/text_title_color"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:text="Tất cả nhà hàng"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:background="#F9FCFF"
                    android:id="@+id/restaurant_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/main_title" />

            </RelativeLayout>
       <RelativeLayout
            android:visibility="gone"
           android:id="@+id/restaurant_select"
           android:layout_width="match_parent"
           android:background="#F9FCFF"
           android:layout_below="@+id/main_app_bar"
           android:layout_alignParentBottom="true"
           android:layout_height="match_parent">
           <LinearLayout
               android:visibility="visible"
               android:id="@+id/options"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_40sdp"
               android:layout_marginVertical="@dimen/_7sdp"
               android:gravity="center"
               android:orientation="horizontal">
               <ImageView
                   android:id="@+id/list"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginEnd="@dimen/_20sdp"
                   android:onClick="@{(v)->mainActivity.onClick(v)}"
                   android:src="@drawable/list_selected"/>
               <ImageView
                   android:id="@+id/note"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:onClick="@{(v)->mainActivity.onClick(v)}"
                   android:layout_marginEnd="@dimen/_10sdp"
                   android:src="@drawable/note"/>
               <ImageView
                   android:layout_marginStart="@dimen/_10sdp"
                   android:id="@+id/statistic"
                   android:layout_width="wrap_content"
                   android:onClick="@{(v)->mainActivity.onClick(v)}"
                   android:layout_height="wrap_content"
                   android:src="@drawable/statistic"/>
               <ImageView
                   android:layout_marginStart="@dimen/_20sdp"
                   android:id="@+id/pc_qrcode"
                   android:layout_width="wrap_content"
                   android:onClick="@{(v)->mainActivity.onClick(v)}"
                   android:layout_height="wrap_content"
                   android:src="@drawable/pc_qr_scan"/>
           </LinearLayout>
           <FrameLayout
               android:layout_below="@+id/options"
               android:layout_alignParentBottom="true"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
           <LinearLayout
               android:id="@+id/connection_layer"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:gravity="center"
               android:orientation="vertical">

               <ImageView
                   android:layout_width="@dimen/_200sdp"
                   android:layout_height="@dimen/_200sdp"
                   android:src="@drawable/ic_cloud_off" />

               <com.google.android.material.card.MaterialCardView
                   android:id="@+id/retry_btn"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:clickable="true"
                   android:onClick="@{(v)-> mainActivity.onClick(v)}"
                   android:translationY="-50dp"
                   app:strokeColor="@color/primary"
                   app:strokeWidth="@dimen/_1sdp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginHorizontal="@dimen/_12sdp"
                       android:layout_marginVertical="@dimen/_6sdp"
                       android:text="@string/retry_connect"
                       android:textColor="@color/primary"
                       android:textSize="@dimen/_18ssp" />
               </com.google.android.material.card.MaterialCardView>
           </LinearLayout>

           <WebView
               android:visibility="@{mainViewModel.connection?View.VISIBLE:View.GONE}"
               android:id="@+id/main_web_view"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="#fffccc"/>
           </FrameLayout>
       </RelativeLayout>


        </RelativeLayout>

       <androidx.constraintlayout.widget.ConstraintLayout
           android:id="@+id/without_restaurant"
           android:visibility="gone"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <ImageView
               android:id="@+id/imageView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_qrbig"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_bias="0.4" />

           <TextView
               android:id="@+id/scan_qr_code"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_40sdp"
               android:layout_alignParentBottom="true"
               android:layout_marginTop="@dimen/_60sdp"
               android:layout_marginHorizontal="@dimen/_17sdp"
               android:background="@drawable/add_restaurant_button_background"
               android:clickable="true"
               android:focusable="true"
               android:gravity="center"
               android:onClick="@{(v)->mainActivity.onClick(v)}"
               android:text="Scan QR code"
               android:textColor="#FFFFFF"
               android:textSize="@dimen/_14sdp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.5"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/imageView" />
       </androidx.constraintlayout.widget.ConstraintLayout>
   </FrameLayout>
</layout>